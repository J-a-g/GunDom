<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.yin.mvvmdemo.util.MyTestConverters" />

        <variable
            name="twowayfragment"
            type="com.yin.mvvmdemo.fragments.main.TwoWayFragment" />

        <variable
            name="twoway"
            type="com.yin.mvvmdemo.data.TwoWayData" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ToggleButton
            android:id="@+id/toggle_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:checked="@={twoway.click}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintWidth_percent="0.8"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btn_checked"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:onClick="@{()->twoway.onChecked()}"
            android:text="make check"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toggle_btn"
            app:layout_constraintWidth_percent="0.8" />

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:onClick="@{twowayfragment::onPrint}"
            android:text="Update Date"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_checked"
            app:layout_constraintWidth_percent="0.8"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/et_date"
            textDate="@={MyTestConverters.longToString(context, twoway.currentTime)}"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.5"
            tools:ignore="MissingConstraints" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{@string/click_status + String.valueOf(twoway.click) + @string/xml_date + etDate.text + @string/xml_date_stamp + String.valueOf(twoway.currentTime)}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_date"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>