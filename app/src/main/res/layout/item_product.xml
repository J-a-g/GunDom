<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.yin.mvvmdemo.databinding.BindingConverters" />

        <variable
            name="clickListener"
            type="android.view.View.OnClickListener" />

        <variable
            name="product"
            type="com.yin.mvvmdemo.db.entity.Product" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#eeeeee"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingTop="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:onClick="@{clickListener}"
            android:padding="10dp">

            <ImageView
                android:id="@+id/iv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:scaleType="centerCrop"
                app:imageUrl="@{product.imageUrl}"
                app:layout_constraintDimensionRatio="1:1"
                app:srcCompat="@drawable/glide_placeholder"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:singleLine="true"
                android:text="@{product.name}"
                android:textColor="@color/text_black"
                android:textSize="@dimen/txt_big_size"
                app:layout_constraintTop_toBottomOf="@id/iv"
                tools:ignore="MissingConstraints"
                tools:text="商品名称" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@{@string/rmb + String.valueOf(product.price)}"
                android:textColor="@color/text_red"
                android:textSize="@dimen/txt_larger_size"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/tv_name"
                app:layout_constraintTop_toBottomOf="@id/tv_name"
                tools:ignore="MissingConstraints"
                tools:text="￥100.0" />

            <TextView
                android:id="@+id/tv_like"
                binddrawableEnd="@{product.like}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:drawablePadding="5dp"
                android:onClick="@{clickListener}"
                android:paddingStart="10dp"
                android:textColor="@color/text_red"
                android:textSize="@dimen/txt_larger_size"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:drawableEnd="@drawable/ic_baseline_favorite_border_24"
                tools:text="10" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</layout>