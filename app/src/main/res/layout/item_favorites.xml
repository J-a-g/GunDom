<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="clickListener"
            type="android.view.View.OnClickListener" />

        <variable
            name="products"
            type="com.yin.mvvmdemo.db.entity.Product" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{clickListener}">

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            app:layout_constraintTop_toBottomOf="@id/iv"
            android:background="#eeeeee"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/iv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            app:imageUrl="@{products.imageUrl}"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintWidth_percent="0.4"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toTopOf="@id/view"
            app:srcCompat="@drawable/glide_placeholder"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:singleLine="true"
            app:layout_constraintTop_toTopOf="@id/iv"
            android:text="@{products.name}"
            android:textColor="@color/text_black"
            android:textSize="@dimen/txt_big_size"
            app:layout_constraintStart_toEndOf="@id/iv"
            tools:ignore="MissingConstraints"
            tools:text="商品名称" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@{@string/rmb + String.valueOf(products.price)}"
            android:textColor="@color/text_red"
            android:textSize="@dimen/txt_larger_size"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/tv_name"
            app:layout_constraintTop_toBottomOf="@id/tv_name"
            tools:ignore="MissingConstraints"
            tools:text="￥100.0" />

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:gravity="bottom"
            android:maxLines="3"
            android:text="@{products.description}"
            android:textColor="@color/text_grey"

            android:textSize="@dimen/txt_big_size"
            app:layout_constraintBottom_toBottomOf="@id/iv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/tv_name"
            app:layout_constraintTop_toBottomOf="@id/tv_price"
            tools:ignore="MissingConstraints"
            tools:text="askldjflkasdjkfaslfjakdfkadlfklafasdfadsffdadfasdasfasfasdsfasdfasdfasdfasdfasffasfasdfasfasdfa" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>